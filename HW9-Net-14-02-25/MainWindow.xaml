<Window x:Class="HW9_Net_14_02_25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW9_Net_14_02_25"
        mc:Ignorable="d"
        Title="текст редактор" Height="450" Width="800">
    <Grid>
        <!-- меню с функциями -->
        <Menu VerticalAlignment="Top" Height="25">
            <MenuItem Header="Шрифт" Click="OnFontMenuClick"/>
            <MenuItem Header="Цвет" Click="OnColorMenuClick"/>
            <MenuItem Header="Сохранить" Click="OnSaveMenuClick"/>
            <MenuItem Header="Открыть" Click="OnOpenMenuClick"/>
        </Menu>

        <!-- зона RichTextBox -->
        <RichTextBox Name="Editor" Margin="0,25,0,0"/>
    </Grid>
</Window>
